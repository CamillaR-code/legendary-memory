import time
import RPi.GPIO as GPIO
from gpiozero import LED


RELAY = 26
GPIO.setwarnings(False)
GPIO.setmode(GPIO.BCM)
GPIO.setup(RELAY, GPIO.OUT)
GPIO.output(RELAY,GPIO.LOW)

led_1 = LED(18)
led_2 = LED(17)
led_1.on()

#To open the lock
      led_1.off()
      led_2.on()
      GPIO.output(RELAY,GPIO.HIGH)
      prevTime = time.time()
      doorUnlock = True
  
  
#lock the door after 5 seconds
